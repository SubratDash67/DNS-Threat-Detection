# Application Settings
APP_NAME="DNS Threat Detection API"
APP_VERSION="1.0.0"
DEBUG=False
ENV=production
ENVIRONMENT=production

# Security (CHANGE IN PRODUCTION!)
SECRET_KEY=your-super-secret-key-min-32-characters-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# Database
# For local development (SQLite):
DATABASE_URL=sqlite+aiosqlite:///./dns_security.db
# For production (PostgreSQL on Render - use Internal Database URL):
# DATABASE_URL=postgresql+asyncpg://user:password@host:port/database

# CORS - Add your Vercel frontend URL here
# Example: ALLOWED_ORIGINS=https://your-app.vercel.app,https://your-app-subdomain.vercel.app
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# Render-specific
PORT=8000

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60

# Cache
CACHE_TTL_SECONDS=3600

# Batch Processing
MAX_BATCH_SIZE=10000
BATCH_CHUNK_SIZE=100
